
.full-page
  margin-top 0
  min-height 100vh
  width 100%
  margin 0
  padding 3% 0

.default-wrap
  width 90%
  max-width 760px
  margin 0 auto

.footer

  &-article
    background-color grey-darker
    padding-top 2.2rem
    margin-top 4rem
    font-size size-small
    font-family family-sans
    perpendicular(1deg, false, grey-darker)
    a
      color grey
      border-bottom 1px solid text
      &:hover {color: grey-light}

  &-colophon
    margin-top 2.3rem
    padding-bottom .8rem
    a {color: text; border-bottom: 0}
    a:hover {color: grey}
